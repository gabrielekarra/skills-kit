[
  {
    "name": "valid-response",
    "input": {
      "response": {
        "id": 123,
        "name": "Test User",
        "active": true
      },
      "schema": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "name": { "type": "string" },
          "active": { "type": "boolean" }
        },
        "required": ["id", "name"]
      }
    },
    "expected": {
      "valid": true,
      "errors": [],
      "warnings": []
    }
  },
  {
    "name": "missing-required-field",
    "input": {
      "response": {
        "name": "Test User"
      },
      "schema": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "name": { "type": "string" }
        },
        "required": ["id", "name"]
      }
    },
    "expected": {
      "valid": false,
      "errors": ["Missing required field: id"],
      "warnings": []
    }
  },
  {
    "name": "type-mismatch",
    "input": {
      "response": {
        "id": "not-a-number",
        "name": "Test User"
      },
      "schema": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "name": { "type": "string" }
        }
      }
    },
    "expected": {
      "valid": false,
      "errors": ["Field \"id\" should be number, got string"],
      "warnings": []
    }
  },
  {
    "name": "extra-field-warning",
    "input": {
      "response": {
        "id": 123,
        "name": "Test User",
        "extraField": "should warn"
      },
      "schema": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "name": { "type": "string" }
        }
      }
    },
    "expected": {
      "valid": true,
      "errors": [],
      "warnings": ["Extra field not in schema: extraField"]
    }
  }
